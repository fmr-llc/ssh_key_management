%nav.navbar.navbar-inverse
  .container-fluid
    .navbar-header
      %button.navbar-toggle.collapsed{ data: { target: '#sshkm-navbar', toggle: :collapse }, type: :button }
        %span.sr-only Toggle navigation
        - 3.times do
          %span.icon-bar
      = link_to root_path, class: 'navbar-brand' do
        = image_tag 'brand.png', alt: 'SSHKM', height: 40
    .collapse.navbar-collapse#sshkm-navbar
      %ul.nav.navbar-nav.navbar-left
        = bs_nav_link_to 'Credentials', credentials_path, active: { controller: 'credentials' }
        %li
          %a{ href: '/docs' } Docs
      %ul.nav.navbar-nav.navbar-right
        %li
          = link_to bs_icon_and_text('question-sign', 'Help'), '#'
        - unless devise_controller?
          %li.dropdown
            %a.gravatar.dropdown-toggle{ aria: { expanded: false }, data: { toggle: :dropdown }, href: '#', role: :button }
              = current_user.username
              = gravatar current_user
              %span.caret
            %ul.dropdown-menu{ role: :menu }
              %li
                = link_to 'Logout', destroy_user_session_path, method: :delete
